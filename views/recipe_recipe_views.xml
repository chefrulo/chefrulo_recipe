<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Recipe Category Views -->
    <record id="view_recipe_category_tree" model="ir.ui.view">
        <field name="name">recipe.category.tree</field>
        <field name="model">recipe.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="recipe_count"/>
            </tree>
        </field>
    </record>

    <record id="view_recipe_category_form" model="ir.ui.view">
        <field name="name">recipe.category.form</field>
        <field name="model">recipe.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_recipe_category" model="ir.actions.act_window">
        <field name="name">Recipe Categories</field>
        <field name="res_model">recipe.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Recipe Views -->
    <record id="view_recipe_recipe_tree" model="ir.ui.view">
        <field name="name">recipe.recipe.tree</field>
        <field name="model">recipe.recipe</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" optional="show"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="portions"/>
                <field name="ingredient_cost" sum="Total"/>
                <field name="total_cost" string="Total (no labor)" sum="Total"/>
                <field name="cost_per_portion_no_labor" string="Portion (no labor)"/>
                <field name="grand_total" string="Grand Total" sum="Total"/>
                <field name="cost_per_portion" string="Portion (with labor)"/>
            </tree>
        </field>
    </record>

    <record id="view_recipe_recipe_kanban" model="ir.ui.view">
        <field name="name">recipe.recipe.kanban</field>
        <field name="model">recipe.recipe</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="image"/>
                <field name="category_id"/>
                <field name="portions"/>
                <field name="cost_per_portion"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('recipe.recipe', 'image', record.id.raw_value)"
                                     alt="Recipe" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <field name="category_id"/>
                                </div>
                                <div>
                                    <span>Portions: <field name="portions"/></span>
                                </div>
                                <div>
                                    <span>Total (no labor): <field name="total_cost" widget="monetary"/></span>
                                </div>
                                <div>
                                    <span>Portion (no labor): <field name="cost_per_portion_no_labor" widget="monetary"/></span>
                                </div>
                                <div>
                                    <span>Grand Total: <field name="grand_total" widget="monetary"/></span>
                                </div>
                                <div>
                                    <strong>Portion (with labor): <field name="cost_per_portion" widget="monetary"/></strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_recipe_recipe_form" model="ir.ui.view">
        <field name="name">recipe.recipe.form</field>
        <field name="model">recipe.recipe</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(action_report_recipe_cost)d" type="action"
                            string="Print Cost Report" class="btn-secondary"/>
                    <button name="action_update_product_cost" type="object"
                            string="Update Product Cost" class="btn-secondary"
                            attrs="{'readonly': ['|', ('product_id', '=', False), ('labor_hours', '=', 0)]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_recompute_costs" type="object"
                                string="Recompute Costs" class="oe_stat_button" icon="fa-refresh"/>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Recipe name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="category_id"/>
                            <field name="product_id"/>
                            <field name="portions"/>
                            <div class="text-muted" colspan="2">
                                Updates linked product standard cost using Portion (with labor).
                                Set Labor Hours and link a product to enable the button.
                            </div>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Ingredients" name="ingredients">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="ingredient_id"/>
                                    <field name="sub_recipe_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="cost" sum="Total"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="ingredient_cost" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>

                        <page string="Additional Costs" name="costs">
                            <group>
                                <group string="Time-Based Costs">
                                    <label for="labor_hours"/>
                                    <div class="o_row">
                                        <field name="labor_hours" class="oe_inline"/> hours
                                        <span class="oe_inline ms-3">= </span>
                                        <field name="labor_cost" class="oe_inline" readonly="1"/>
                                    </div>
                                    <label for="energy_hours"/>
                                    <div class="o_row">
                                        <field name="energy_hours" class="oe_inline"/> hours
                                        <span class="oe_inline ms-3">= </span>
                                        <field name="energy_cost" class="oe_inline" readonly="1"/>
                                    </div>
                                </group>
                                <group string="Other Costs">
                                    <field name="packaging_cost"/>
                                    <field name="extra_cost"/>
                                </group>
                            </group>
                        </page>

                        <page string="Instructions" name="instructions">
                            <field name="description" placeholder="Brief description..."/>
                            <separator string="Cooking Instructions"/>
                            <field name="instructions" placeholder="Step by step instructions..."/>
                        </page>
                    </notebook>

                    <group string="Cost Summary" class="oe_subtotal_footer">
                        <field name="ingredient_cost" string="Ingredients"/>
                        <field name="labor_cost" string="Labor"/>
                        <field name="energy_cost" string="Energy"/>
                        <field name="packaging_cost" string="Packaging"/>
                        <field name="extra_cost" string="Extra"/>
                        <field name="total_cost" string="Total (no labor)" class="oe_subtotal_footer_separator"/>
                        <field name="cost_per_portion_no_labor" string="Portion (no labor)" class="oe_subtotal_footer_separator"/>
                        <field name="grand_total" string="Grand Total" class="oe_subtotal_footer_separator"/>
                        <field name="cost_per_portion" string="Portion (with labor)" class="oe_subtotal_footer_separator"
                               style="font-size: 1.4em; font-weight: bold;"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_recipe_recipe_search" model="ir.ui.view">
        <field name="name">recipe.recipe.search</field>
        <field name="model">recipe.recipe</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_category" string="Category" context="{'group_by': 'category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_recipe_recipe" model="ir.actions.act_window">
        <field name="name">Recipes</field>
        <field name="res_model">recipe.recipe</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>
</odoo>
