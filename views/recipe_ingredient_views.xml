<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Ingredient Category Views -->
    <record id="view_recipe_ingredient_category_tree" model="ir.ui.view">
        <field name="name">recipe.ingredient.category.tree</field>
        <field name="model">recipe.ingredient.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="ingredient_count"/>
            </tree>
        </field>
    </record>

    <record id="view_recipe_ingredient_category_form" model="ir.ui.view">
        <field name="name">recipe.ingredient.category.form</field>
        <field name="model">recipe.ingredient.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_recipe_ingredient_category" model="ir.actions.act_window">
        <field name="name">Ingredient Categories</field>
        <field name="res_model">recipe.ingredient.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Ingredient Views -->
    <record id="action_recipe_ingredient_sample_csv" model="ir.actions.act_url">
        <field name="name">Download Sample CSV</field>
        <field name="url">/chefrulo_recipe/static/sample/ingredient_import_example.csv</field>
        <field name="target">self</field>
    </record>

    <record id="view_recipe_ingredient_tree" model="ir.ui.view">
        <field name="name">recipe.ingredient.tree</field>
        <field name="model">recipe.ingredient</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button name="%(action_ingredient_import)d" type="action"
                            string="Import CSV" class="btn-primary"/>
                    <button name="%(action_recipe_ingredient_sample_csv)d" type="action"
                            string="Download Sample CSV" class="btn-link"/>
                </header>
                <field name="code" optional="show"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="price"/>
                <field name="uom_id"/>
                <field name="supplier" optional="show"/>
                <field name="price_date"/>
            </tree>
        </field>
    </record>

    <record id="view_recipe_ingredient_form" model="ir.ui.view">
        <field name="name">recipe.ingredient.form</field>
        <field name="model">recipe.ingredient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(action_ingredient_import)d" type="action"
                            string="Import CSV" class="btn-primary"/>
                    <button name="%(action_recipe_ingredient_sample_csv)d" type="action"
                            string="Download Sample CSV" class="btn-link"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="price"/>
                            <field name="uom_id"/>
                            <field name="price_date"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="supplier"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_recipe_ingredient_search" model="ir.ui.view">
        <field name="name">recipe.ingredient.search</field>
        <field name="model">recipe.ingredient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="supplier"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_category" string="Category" context="{'group_by': 'category_id'}"/>
                    <filter name="group_supplier" string="Supplier" context="{'group_by': 'supplier'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_recipe_ingredient" model="ir.actions.act_window">
        <field name="name">Ingredients</field>
        <field name="res_model">recipe.ingredient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>
</odoo>
