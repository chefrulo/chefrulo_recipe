<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_recipe_cost">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="article" style="padding: 20px;">
                    <div class="text-center mb-4">
                        <img t-if="o.env.company.logo" t-att-src="image_data_uri(o.env.company.logo)" style="max-height: 80px;"/>
                    </div>
                    <h2>
                        <span t-field="o.name"/>
                    </h2>
                    <div class="row mb-3">
                        <div class="col-12">
                            <p t-if="o.code">
                                <strong>Code:</strong>
                                <span t-field="o.code"/>
                            </p>
                            <p>
                                <strong>Category:</strong>
                                <span t-if="o.category_id" t-field="o.category_id.name"/>
                                <span t-else="">-</span>
                            </p>
                            <p>
                                <strong>Portions:</strong>
                                <span t-field="o.portions"/>
                            </p>
                        </div>
                    </div>

                    <t t-if="o.description">
                        <h4>Description</h4>
                        <p t-field="o.description"/>
                    </t>

                    <h4>Ingredients</h4>
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr class="bg-light">
                                <th>Ingredient</th>
                                <th class="text-end">Qty</th>
                                <th>UoM</th>
                                <th class="text-end">Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <span t-if="line.ingredient_id" t-field="line.ingredient_id.name"/>
                                        <span t-if="line.sub_recipe_id">[Sub] <t t-esc="line.sub_recipe_id.name"/></span>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td>
                                        <span t-field="line.uom_id.name"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.cost" t-options="{'widget': 'float', 'precision': 2}"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr class="bg-light">
                                <th colspan="3">Ingredient Cost</th>
                                <th class="text-end">
                                    <span t-field="o.ingredient_cost" t-options="{'widget': 'float', 'precision': 2}"/>
                                </th>
                            </tr>
                        </tfoot>
                    </table>

                    <t t-if="o.instructions">
                        <h4>Instructions</h4>
                        <div t-field="o.instructions" style="white-space: pre-wrap;"/>
                    </t>

                    <h4>Cost Summary</h4>
                    <table class="table table-sm" style="width: 50%;">
                        <tbody>
                            <tr>
                                <td>Ingredients</td>
                                <td class="text-end">
                                    <span t-field="o.ingredient_cost" t-options="{'widget': 'float', 'precision': 2}"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Energy</td>
                                <td class="text-end">
                                    <span t-field="o.energy_cost" t-options="{'widget': 'float', 'precision': 2}"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Packaging</td>
                                <td class="text-end">
                                    <span t-field="o.packaging_cost" t-options="{'widget': 'float', 'precision': 2}"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Extra</td>
                                <td class="text-end">
                                    <span t-field="o.extra_cost" t-options="{'widget': 'float', 'precision': 2}"/>
                                </td>
                            </tr>
                            <tr class="border-top">
                                <th>Total (without Labor)</th>
                                <th class="text-end">
                                    <span t-field="o.total_cost" t-options="{'widget': 'float', 'precision': 2}"/>
                                </th>
                            </tr>
                            <tr>
                                <td>Cost per Portion (no labor)</td>
                                <td class="text-end">
                                    <span t-field="o.cost_per_portion_no_labor" t-options="{'widget': 'float', 'precision': 2}"/>
                                </td>
                            </tr>
                            <tr class="border-top">
                                <td>Labor (<t t-esc="o.labor_hours"/> hrs)</td>
                                <td class="text-end">
                                    <span t-field="o.labor_cost" t-options="{'widget': 'float', 'precision': 2}"/>
                                </td>
                            </tr>
                            <tr class="border-top" style="font-size: 1.2em;">
                                <th>GRAND TOTAL</th>
                                <th class="text-end">
                                    <span t-field="o.grand_total" t-options="{'widget': 'float', 'precision': 2}"/>
                                </th>
                            </tr>
                            <tr style="font-size: 1.2em; font-weight: bold;">
                                <th>Cost per Portion (with labor)</th>
                                <th class="text-end">
                                    <span t-field="o.cost_per_portion" t-options="{'widget': 'float', 'precision': 2}"/>
                                </th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
